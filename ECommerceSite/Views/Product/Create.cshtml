@model Product
@{
    ViewData["Title"] = "Create a new product";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label> <br />
                <input asp-for="Category" id="food" type="radio" value="food" />
                <label id="food">Food</label> <br />
                <input asp-for="Category" id="toys" type="radio" value="toys" />
                <label id="toys">Toys</label> <br />
                <input asp-for="Category" id="hygiene" type="radio" value="hygiene" />
                <label id="hygiene">Hygiene</label> <br />
                <input asp-for="Category" id="other" type="radio" value="other" />
                <label id="other">Other</label> <br />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
